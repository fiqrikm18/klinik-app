<Page x:Class="pendaftaran.views.daftar_baru"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pendaftaran.views"
      mc:Ignorable="d" 
      Title="daftar_baru">

    <Grid Style="{StaticResource OpenSans}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0">
            <Label FontSize="16" FontWeight="Bold" Foreground="#303030">Daftar Pasien Baru</Label>
            <Grid Margin="0 15">
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Foreground" Value="#303030"/>
                        <Setter Property="Padding" Value="0, 15"/>
                    </Style>

                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Margin" Value="0 4"></Setter>
                        <Setter Property="Width" Value="270"></Setter>
                        <Setter Property="Padding" Value="0 6"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                        <Setter Property="BorderThickness" Value="0 0 0 1"></Setter>
                        <Setter Property="BorderBrush" Value="#303030"></Setter>
                    </Style>

                    <Style TargetType="{x:Type ComboBox}">
                        <Setter Property="Width" Value="Auto"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                    </Style>

                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="0 10 10 0"></Setter>
                        <Setter Property="Padding" Value="3"></Setter>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"></ColumnDefinition>
                    <ColumnDefinition Width="280"></ColumnDefinition>

                    <ColumnDefinition Width="100"></ColumnDefinition>
                    <ColumnDefinition Width="250"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Content="No.Rekam Medis" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
                <TextBox x:Name="TxtNoRm" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center"></TextBox>

                <Label Content="No.Identitas (KTP/SIM)" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"/>
                <TextBox x:Name="TxtNoIdentitas" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"></TextBox>

                <Label Content="Nama Pasien" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2"/>
                <TextBox x:Name="TxtNamaPasien" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"></TextBox>

                <Label Content="Tanggal Lahir" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3"/>
                <DatePicker x:Name="TxtTanggalLahir" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" Width="150" HorizontalAlignment="Left" Margin="0,1"></DatePicker>

                <Label Content="Jenis Kelamin" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4"/>
                <ComboBox x:Name="TxtJenisKelamin" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center" SelectedIndex="0">
                    <ComboBoxItem Content="Pria"/>
                    <ComboBoxItem Content="Wanita"/>
                </ComboBox>

                <Label Content="No.Telepon" VerticalAlignment="Center" Grid.Column="0" Grid.Row="5"/>
                <TextBox x:Name="TxtNoTelp" Grid.Column="1" Grid.Row="5" VerticalAlignment="Center"></TextBox>

                <Label Content="Alamat" VerticalAlignment="Center" Grid.Column="0" Grid.Row="6"/>
                <TextBox x:Name="TextAlamat" Grid.Column="1" Grid.Row="6" VerticalAlignment="Center"></TextBox>

                <Label Content="Poliklinik" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="0"/>
                <ComboBox x:Name="cbPoliklinik" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center" SelectedIndex="0"/>

                <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="1" 
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="Daftar"></Button>
                    <Button Content="Batal"></Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
